generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Projects model
model Projects {
  proj_id       Int            @id @default(autoincrement())
  proj_name     String
  proj_img      String         @default("logo_placeholder.png")
  github        String?
  hosting       String?
  description   String
  category      Category // Using predefined enum
  projectStacks ProjectStack[]

  @@map("projects")
}

// Stack model
model Stack {
  id            Int            @id @default(autoincrement())
  name          String
  logo          String         @default("logo_placeholder.png")
  href          String?
  category      String         @default("learning")
  projectStacks ProjectStack[]

  @@map("stacks")
}

// Post model
model Post {
  post_id   Int      @id @default(autoincrement())
  post_name String
  content   String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category  Category

  @@map("posts")
}

model ProjectStack {
  id        Int      @id @default(autoincrement())
  projectId Int
  stackId   Int
  project   Projects @relation(fields: [projectId], references: [proj_id], onDelete: Cascade)
  stack     Stack    @relation(fields: [stackId], references: [id], onDelete: Cascade)

  @@unique([projectId, stackId])
  @@map("project_stacks")
}

// Enum for predefined categories
enum Category {
  web
  machinelearning
  deeplearning
  dataanalysis
  iot
  desktop
  mobile
}
